<%= simple_form_for(@page) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= link_to @page.title, @page %>
    <%= f.input :content, :input_html => { :id => 'post_content'  } %>
    <%= f.input :published %>
    <%= f.input :published_at %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
