<h1>Editing comment</h1>

  <%= simple_form_for [@post, @comment] do |f| %>
     <%= f.error_notification %>
  
    <div class="form-inputs">
      <%= f.input :name, :placeholder => 'Имя' %>
      <%= f.input :email, :placeholder => 'Почта' %>
      <%= f.input :content %>
    </div>
  
    <div class="form-actions">
      <%= f.submit 'Отправить' %>
    </div>
  <% end %>

