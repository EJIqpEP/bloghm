<p id="notice"><%= notice %></p>

<h1><%= @tag.name %></h1>

<% @posts.each do |post| %>
  <div class ="post_teaser">
    <div class = "teaser_title"><%= link_to post.title, post %></div>
    <div class = "teaser_about">
      <div class = "teaser_date"><%= l post.created_at, :format => :short %></div>
      <div class = "teaser_tags">
        <% post.tags.any? %>
          <% post.tags.each do |tag| %>
          <li><%= link_to tag.name, tag %></li>
        <% end %>
      </div>
    </div>
  </div>
  <div class = "clear"></div>
<% end %>

<%= render "shared/sidebar" %>

<% content_for :under_content do %>
  <%= paginate @posts %>
<% end %>
