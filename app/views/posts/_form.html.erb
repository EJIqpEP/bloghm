<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= link_to @post.title, @post %>
    <%= f.input :body, :input_html => { :id => 'post_content'  } %>
    <%= f.input :slug %>
    <%= f.input :published %>
    <%= f.input :published_at %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
